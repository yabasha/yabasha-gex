{
  "name": "@yabasha/gex",
  "version": "0.4.0",
  "private": false,
  "description": "A CLI tool for auditing and documenting your Node.js package environment, generating comprehensive reports of global and local dependencies.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "gex": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --onSuccess \"node dist/cli.cjs --help\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky install || true",
    "release": "changeset publish",
    "version-pack": "npm pack"
  },
  "keywords": [
    "typescript",
    "starter",
    "cli",
    "library",
    "tsup",
    "commander"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yabasha/yabasha-gex"
  },
  "homepage": "https://github.com/yabasha/yabasha-gex#readme",
  "bugs": {
    "url": "https://github.com/yabasha/yabasha-gex/issues"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.8",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
